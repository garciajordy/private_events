<h1 class="text-center mt-3">The Event's Page</h1>
<div class="flex-row d-flex mt-5">
    <div class="col-6">
        <h3 class="text-center text-success">Upcoming Events</h3>
        <div>
            <div class="grid-con">
                <% @upcoming_events.order("date ASC").each do |event| %>
                <div class="card m-2">
                    <div class=" card-body">
                        <h5 class="card-title"><%= event.date %></h5>
                        <p class="card-text"><%= event.discription %></p>
                        <%= link_to "Show", event, class: "btn btn-primary" %>
                        <% @invite1 = eventinv(event) %>
                        <%= invitebut(@invite1,event) %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h3 class="text-center text-danger">Past Events</h3>
        <div>
            <div class="grid-con">
                <% @past_events.order("date DESC").each do |event| %>
                <div class="card m-2">
                    <div class=" card-body">
                        <h5 class="card-title"><%= event.date %></h5>
                        <p class="card-text"><%= event.discription %></p>
                        <%= link_to "Show", event, class: "btn btn-primary" %>
                        <% @new = Invite.where(event_id: event.id).where(user_id: current_user.id).where(attendence: false) %>
                        <% @invite2 = eventinv(event) %>
                        <%= invitebut2(@invite2, event) %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>